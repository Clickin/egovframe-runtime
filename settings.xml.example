<?xml version="1.0" encoding="UTF-8"?>
<!--
  Example Maven settings.xml for consuming eGovFrame Runtime packages from GitHub Packages

  Usage:
  1. Copy this file to ~/.m2/settings.xml (or merge with existing settings.xml)
  2. Replace YOUR_GITHUB_USERNAME with your actual GitHub username
  3. Replace YOUR_PERSONAL_ACCESS_TOKEN with your GitHub Personal Access Token
  4. Create Personal Access Token at: https://github.com/settings/tokens
     Required scopes: read:packages

  For Windows: %USERPROFILE%\.m2\settings.xml
  For macOS/Linux: ~/.m2/settings.xml
-->
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
          http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <activeProfiles>
        <activeProfile>github</activeProfile>
    </activeProfiles>

    <profiles>
        <profile>
            <id>github</id>
            <repositories>
                <repository>
                    <id>github</id>
                    <name>GitHub Packages - eGovFrame Runtime</name>
                    <url>https://maven.pkg.github.com/Clickin/egovframe-runtime</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
                <!-- Add other repositories if needed -->
                <repository>
                    <id>central</id>
                    <name>Maven Central</name>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
    </profiles>

    <servers>
        <server>
            <id>github</id>
            <username>YOUR_GITHUB_USERNAME</username>
            <password>YOUR_PERSONAL_ACCESS_TOKEN</password>
        </server>
    </servers>

</settings>